
server {
    listen 443 ssl;
    server_name aahrach.42.fr;

    root /usr/share/nginx/html/;

    ssl_certificate /etc/ssl/certs/localhost.crt;
    ssl_certificate_key /etc/ssl/private/localhost.key;

    ssl_protocols TLSv1.2 TLSv1.1 TLSv1;

    index index.php index.html index.htm index.nginx-debian.html;

    location / {
    #if the request is for http://example.com/some-page, then $uri will be /some-page.
    #this configuration ensures that all requests that don't match existing files or directories
    # are sent to index.php, which acts as the main entry point for the PHP application.
        try_files $uri $uri/ /index.php?$args;
        # try_files $uri $uri/ =404;
    }

    location ~ \.php$ {
        # include snippets/fastcgi-php.conf;
        include snippets/fastcgi-php.conf;
        fastcgi_index index.php;
        #specifies the location of the FastCGI server that will process PHP files.
        fastcgi_pass my_wordpress_container:9000;

    }
}
